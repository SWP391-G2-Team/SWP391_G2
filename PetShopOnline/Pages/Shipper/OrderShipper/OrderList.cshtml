@page
@model PetShopOnline.Pages.Shipper.OrderShipper.OrderListModel
@{
    Layout = "/Pages/Shared/_LayoutShipper.cshtml";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #007BFF; /* Blue Background Color */
        margin: 0;
        padding: 0;
    }

    h1 {
        text-align: center;
        color: mediumvioletred; /* Dark gray text color */
        background-color: purple;
    }

    #orders {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
        background-color: #add8e6; /* Light background color */
    }

        #orders th,
        #orders td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        #orders th {
            background-color: #f2f2f2;
        }

    .future-status {
        color: gray;
    }

    .complete-status {
        color: green;
    }

    /* Remove underline from links */
    #orders a {
        text-decoration: none;
    }
</style>

<link href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" rel="stylesheet">

@section Scripts {
    <script src="//code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#orders').DataTable({
                "paging": true,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
                "searching": true, // Enable search bar
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "columnDefs": [
                    { "targets": [0], "width": "5%" },
                    { "targets": [1], "width": "25%" },
                    { "targets": [2], "width": "15%" },
                    { "targets": [3], "width": "18%" },
                    { "targets": [4], "width": "17%" },
                    { "targets": [5], "width": "15%" },
                    { "targets": [6], "width": "5%" }
                ],
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ dòng",
                    "info": "Hiển thị _START_ - _END_ trên tổng cộng _TOTAL_ dòng",
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Tiếp",
                        "previous": "Trước"
                    }
                },
            });
        });
    </script>
}

    <h1 style="text-decoration: none;">Order List</h1>


    <table id="orders" class="display">
        <thead>
            <tr>
                <th>No.</th>
                <th>Tên sản phẩm</th>
                <th>Địa chỉ nhận hàng</th>
                <th>Số điện thoại liên hệ</th>
                <th>Người cần liên hệ</th>
                <th>Trạng thái</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < Model.Ships.Count; i++)
        {
            var ship = Model.Ships[i];
            var shipNumber = i + 1;
            <tr>
                <td>@shipNumber</td>
                <td>@ship.ProductNames</td>
                <td>@ship.Address</td>
                <td>@ship.PhoneContact</td>
                <td>@ship.ShipContact</td>
                <td>
                    @if (@ship.OrderStatus == "Future")
                    {
                        <span class="future-status">Đang trong quá trình chuẩn bị hàng</span>
                    }
                    else if (@ship.OrderStatus == "Complete")
                    {
                        <span class="complete-status">Đơn hàng đã chuẩn bị xong</span>
                    }
                </td>
                <td>
                    <a href="~/Shipper/OrderShipper/OrderDetail?OrderId=@ship.OrderId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
