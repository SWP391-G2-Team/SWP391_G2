@page
@model PetShopOnline.Pages.Product.ProductDetailModel
@{
    ViewData["Title"] = "ProductDetail";
}
<head>
    <div class="jumbotron jumbotron-bg text-center rounded-0" style="background-image: url('https://azpet.com.vn/wp-content/uploads/2021/07/Banner-Mobile-Cho-Canh.jpg');">
    </div>
</head>
<body>
    <link href="~/css/detailproduct.css" rel="stylesheet" />
    <div id="content-detail">
        <div id="product">
            <div id="product-name">
                <h2>@Model.Product.ProductName</h2>
                <div class="row product-detail">
                    <div class="col-sm-6 product-detail-left">
                        <div>
                            <div id="product-img" class="imga">
                                <img id="mainImage" src="@Model.Product.Pictures.FirstOrDefault()?.Picture" />
                            </div>
                            @*<div id="product-img-items">
                            <div><a href="#"><img src="@Model.Product.Pictures.FirstOrDefault()?.Picture" onclick="changeMainImage(this)" /></a></div>
                            <div><a href="#"><img src="@Model.Product.Pictures.FirstOrDefault()?.Picture" onclick="changeMainImage(this)" /></a></div>
                            <div><a href="#"><img src="@Model.Product.Pictures.FirstOrDefault()?.Picture" onclick="changeMainImage(this)" /></a></div>
                            <div><a href="#"><img src="@Model.Product.Pictures.FirstOrDefault()?.Picture" onclick="changeMainImage(this)" /></a></div>
                            </div>
                            <script src="~/js/changeimage.js"></script>
                            *@
                        </div>
                    </div>
                    <div class="col-sm-6 product-detail-right">
                        <div>
                            <div class="info-detail">
                                <div id="info-detail-title">
                                    <h2>Thông Tin Sản Phẩm</h2>
                                    <div style="margin:10px auto;">
                                        @Html.DisplayFor(model => model.Product.Description)
                                    </div>
                                </div>
                            </div>
                            <div class="product-detail-right-content">
                                <div id="product-price">@Model.Product.UnitPrice VNĐ</div>
                                <div id="product-status" style="font-size : 25px">
                                    @if (Model.Product.Status == false || Model.Product.QuantityPerUnit <= 0)
                                    {
                                        <span style="color: red;">Hết hàng</span>
                                    }
                                    else if (Model.Product.Status == true || Model.Product.QuantityPerUnit > 0)
                                    {
                                        <span style="color: green;">Còn hàng</span>
                                    }
                                </div>
                                <div id="product-detail-buttons" class=" mb-2">

                                    @if (Model.Product.Status == false || Model.Product.QuantityPerUnit <= 0)
                                    {
                                        <div id="product-detail-button" style=" text-align:center">
                                            <a href="#"><input style="background-color:#fff ; color:red;" type="button" value="Hết Hàng"></a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div id="product-detail-button">
                                            <a asp-page="/Product/Cart" asp-page-handler="buynow" class="btn btn-success mr-2" asp-route-id="@Model.Product.ProductId">
                                                BUY NOW
                                            </a>
                                            <a asp-page="/Product/ProductDetail" asp-page-handler="addtocart" asp-route-id="@Model.Product.ProductId"
                                               class="btn btn-outline-success mr-2">
                                                ADD TO CART
                                            </a>
                                        </div>
                                        @*   </div>*@
                                    }

                                </div>

                            </div>
                            <span class="mt-2" style="color:green">@ViewData["successmess"]</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>
</body>